    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/AdguardTeam/tsurlfilter.git",
        "directory": "packages/github-actions-runner"
    },
    "homepage": "https://github.com/AdguardTeam/tsurlfilter/tree/master/packages/github-actions-runner#readme",
    "engines": {
        "node": ">=18.19.1"
    },
    "dependencies": {
        "axios": "^1.6.8",
        "commander": "^12.0.0",
        "dotenv": "^16.4.5",
        "fs-extra": "^11.2.0",
        "nanoid": "^5.0.7",
        "octokit": "^3.2.0",
        "winston": "^3.13.0"
